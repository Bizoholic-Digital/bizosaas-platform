# BizOSaaS Local Development Environment Variables
# Copy this file to .env.local and update values as needed

# ========================================
# Registry Configuration
# ========================================
REGISTRY=localhost:5000
VERSION=latest

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=bizosaas
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ========================================
# Vault Configuration
# ========================================
VAULT_TOKEN=root
VAULT_ADDR=http://vault:8200

# ========================================
# Authentication & Security
# ========================================
JWT_SECRET=local-dev-jwt-secret-change-in-production
NEXTAUTH_SECRET=local-dev-nextauth-secret-change-in-production
NEXTAUTH_URL=http://portal.bizosaas.local

# ========================================
# API URLs (Internal - Container to Container)
# ========================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/bizosaas
REDIS_URL=redis://redis:6379/0
TEMPORAL_HOST=temporal:7233

# ========================================
# API URLs (External - Browser to Service)
# ========================================
NEXT_PUBLIC_API_URL=http://api.bizosaas.local
NEXT_PUBLIC_AUTH_URL=http://auth.bizosaas.local
NEXT_PUBLIC_BRAIN_GATEWAY_URL=http://api.bizosaas.local

# ========================================
# LLM API Keys (Optional - for BYOK testing)
# ========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# ========================================
# OAuth Providers (Optional)
# ========================================
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_ID=
GOOGLE_SECRET=
MICROSOFT_ID=
MICROSOFT_SECRET=

# ========================================
# Monitoring & Observability
# ========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ========================================
# Feature Flags
# ========================================
ENABLE_RAG=true
ENABLE_TEMPORAL_WORKFLOWS=true
ENABLE_AUDIT_LOGGING=true

# ========================================
# Development Settings
# ========================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
