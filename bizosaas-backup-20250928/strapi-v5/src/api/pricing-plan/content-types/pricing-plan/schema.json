{
  "kind": "collectionType",
  "collectionName": "pricing_plans",
  "info": {
    "singularName": "pricing-plan",
    "pluralName": "pricing-plans",
    "displayName": "Pricing Plan"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "pricing": {
      "type": "json",
      "required": true
    },
    "features": {
      "type": "json",
      "required": true
    },
    "popular": {
      "type": "boolean",
      "default": false
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "bizoholic",
        "coreldove",
        "both"
      ],
      "default": "both"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}