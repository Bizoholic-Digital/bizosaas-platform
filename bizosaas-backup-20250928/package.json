{
  "name": "bizosaas-monorepo",
  "version": "1.0.0",
  "description": "BizOSaaS Multi-Tenant Platform Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/frontend-nextjs"
  ],
  "scripts": {
    "dev": "./start-dev-environment.sh start",
    "start": "./start-dev-environment.sh start",
    "stop": "./start-dev-environment.sh stop",
    "restart": "./start-dev-environment.sh restart",
    "status": "./start-dev-environment.sh status",
    "test": "./start-dev-environment.sh test",
    "logs": "./start-dev-environment.sh logs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev:bizoholic": "cd apps/bizoholic-frontend && npm run dev",
    "dev:coreldove": "cd apps/coreldove-frontend && npm run dev",
    "dev:bizosaas": "cd services/frontend-nextjs && npm run dev",
    "dev:admin": "cd apps/bizosaas-admin && npm run dev",
    "dev:portal": "cd apps/client-portal && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:brain": "cd services/bizosaas-brain && python3 simple_api.py",
    "build:all": "npm run build --workspaces",
    "start:all": "concurrently \"npm run dev:bizoholic\" \"npm run dev:coreldove\" \"npm run dev:bizosaas\" \"npm run dev:admin\" \"npm run dev:portal\"",
    "start:frontends": "concurrently \"npm run dev:bizoholic\" \"npm run dev:coreldove\" \"npm run dev:admin\" \"npm run dev:portal\"",
    "setup:workspace": "npm install && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup:monorepo": "./setup-monorepo.sh setup",
    "validate:monorepo": "./setup-monorepo.sh validate",
    "clean:monorepo": "./setup-monorepo.sh clean"
  },
  "devDependencies": {
    "turbo": "^1.10.16",
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.8.1"
}