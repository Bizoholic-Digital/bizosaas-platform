# Production Environment Variables for Multi-Domain Setup
# This file should be copied to .env for production deployment

# ================================
# BIZOHOLIC PLATFORM CONFIGURATION
# ================================

# Bizoholic Website (Marketing Site)
BIZOHOLIC_DATABASE_URL=postgresql://bizoholic_user:your_password@postgres:5432/bizoholic_cms
BIZOHOLIC_APP_KEYS=app-key-1,app-key-2,app-key-3,app-key-4
BIZOHOLIC_JWT_SECRET=your-bizoholic-jwt-secret-here
BIZOHOLIC_ADMIN_JWT_SECRET=your-bizoholic-admin-jwt-secret-here
BIZOHOLIC_API_TOKEN_SALT=your-bizoholic-api-token-salt-here
BIZOHOLIC_PREVIEW_SECRET=your-bizoholic-preview-secret-here
BIZOHOLIC_STRIPE_API_KEY=sk_live_your_bizoholic_stripe_key
BIZOHOLIC_STRIPE_WEBHOOK_SECRET=whsec_your_bizoholic_webhook_secret

# BizoSaaS Dashboard Application
BIZOSAAS_DATABASE_URL=postgresql://bizosaas_user:your_password@postgres:5432/bizosaas_app
BIZOSAAS_NEXTAUTH_SECRET=your-bizosaas-nextauth-secret-here
BIZOSAAS_JWT_SECRET=your-bizosaas-jwt-secret-here

# ================================
# CORELDOVE PLATFORM CONFIGURATION
# ================================

# CoreLDove E-commerce Backend
CORELDOVE_DATABASE_URL=postgresql://coreldove_user:your_password@postgres:5432/coreldove_ecommerce
CORELDOVE_REDIS_URL=redis://redis:6379
CORELDOVE_JWT_SECRET=your-coreldove-jwt-secret-here
CORELDOVE_COOKIE_SECRET=your-coreldove-cookie-secret-here
CORELDOVE_STRIPE_API_KEY=sk_live_your_coreldove_stripe_key
CORELDOVE_STRIPE_WEBHOOK_SECRET=whsec_your_coreldove_webhook_secret
CORELDOVE_STRIPE_PUBLISHABLE_KEY=pk_live_your_coreldove_publishable_key
CORELDOVE_ADMIN_NEXTAUTH_SECRET=your-coreldove-admin-nextauth-secret-here

# ================================
# AI SERVICES CONFIGURATION
# ================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-openai-org-id-here

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Other AI Services
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key-here
COHERE_API_KEY=your-cohere-api-key-here

# ================================
# EMAIL SERVICES CONFIGURATION
# ================================

# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM=noreply@bizoholic.com

# Resend Configuration (Alternative)
RESEND_API_KEY=re_your-resend-api-key-here

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL Configuration
POSTGRES_USER=bizoholic_admin
POSTGRES_PASSWORD=your-super-secure-postgres-password-here
POSTGRES_DB=bizoholic_platform

# Redis Configuration
REDIS_PASSWORD=your-redis-password-here

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Secrets (Generate unique 32-character strings)
JWT_SECRET=your-master-jwt-secret-32-chars-long
NEXTAUTH_SECRET=your-nextauth-secret-32-chars-long

# Encryption Keys
ENCRYPTION_KEY=your-encryption-key-32-chars-long
API_ENCRYPTION_SALT=your-api-encryption-salt-here

# CORS Origins
CORS_ORIGINS=https://bizoholic.com,https://app.bizoholic.com,https://coreldove.com,https://admin.coreldove.com

# ================================
# SOCIAL MEDIA API CONFIGURATION
# ================================

# Meta (Facebook/Instagram)
META_APP_ID=your-meta-app-id-here
META_APP_SECRET=your-meta-app-secret-here
META_ACCESS_TOKEN=your-meta-access-token-here

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id-here
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret-here

# Google
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_API_KEY=your-google-api-key-here

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
TWITTER_ACCESS_TOKEN=your-twitter-access-token-here
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret-here

# TikTok
TIKTOK_CLIENT_ID=your-tiktok-client-id-here
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret-here

# ================================
# CRM INTEGRATIONS CONFIGURATION
# ================================

# HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key-here
HUBSPOT_CLIENT_ID=your-hubspot-client-id-here
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret-here

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id-here
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret-here
SALESFORCE_USERNAME=your-salesforce-username-here
SALESFORCE_PASSWORD=your-salesforce-password-here
