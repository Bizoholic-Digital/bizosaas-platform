# Pipedrive
PIPEDRIVE_API_KEY=your-pipedrive-api-key-here
PIPEDRIVE_COMPANY_DOMAIN=your-company.pipedrive.com

# ================================
# MONITORING & LOGGING
# ================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here

# Log Level
LOG_LEVEL=INFO

# ================================
# DEPLOYMENT CONFIGURATION
# ================================

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Domain Configuration
PRIMARY_DOMAIN=bizoholic.com
CORELDOVE_DOMAIN=coreldove.com

# CDN Configuration
CDN_URL=https://cdn.bizoholic.com
ASSETS_URL=https://assets.bizoholic.com

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/bizoholic.com.pem
SSL_KEY_PATH=/etc/ssl/private/bizoholic.com.key

# ================================
# OPTIONAL SERVICES
# ================================

# AWS Configuration (if using AWS services)
AWS_ACCESS_KEY_ID=your-aws-access-key-id-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET=bizoholic-assets

# Cloudflare (if using Cloudflare)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id-here

# Google Analytics
GA_TRACKING_ID=GA4-your-tracking-id-here
GOOGLE_ANALYTICS_ID=G-your-analytics-id-here

# Facebook Pixel
FACEBOOK_PIXEL_ID=your-facebook-pixel-id-here

