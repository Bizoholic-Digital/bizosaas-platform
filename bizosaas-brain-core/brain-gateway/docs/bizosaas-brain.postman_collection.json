{
    "info": {
        "name": "BizOSaaS Brain Gateway API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health",
            "item": [
                {
                    "name": "Check Health",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Connectors",
            "item": [
                {
                    "name": "List Connectors",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/connectors",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "connectors"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "AI Agents",
            "item": [
                {
                    "name": "Chat with Agent",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"Hello, what can you do?\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/brain/agents/{{agent_id}}/chat",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "brain",
                                "agents",
                                "{{agent_id}}",
                                "chat"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "your-access-token",
            "type": "string"
        },
        {
            "key": "agent_id",
            "value": "default-agent",
            "type": "string"
        }
    ]
}