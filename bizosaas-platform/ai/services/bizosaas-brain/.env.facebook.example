# Facebook Ads Integration Configuration
# Get these from https://developers.facebook.com/apps/

# Facebook App Credentials
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# OAuth Configuration
FACEBOOK_REDIRECT_URI=http://localhost:3002/api/brain/integrations/facebook-ads/oauth?action=callback

# Facebook Graph API Version
FACEBOOK_API_VERSION=v18.0

# Security Configuration
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Optional: Business Manager ID
FACEBOOK_BUSINESS_ID=your_business_id_here

# Development Mode (set to 'true' for development)
FACEBOOK_DEV_MODE=true

# Required Permissions (comma-separated)
FACEBOOK_DEFAULT_SCOPES=ads_management,ads_read,business_management,pages_read_engagement,read_insights

# Rate Limiting Configuration
FACEBOOK_API_RATE_LIMIT_PER_HOUR=200
FACEBOOK_API_RATE_LIMIT_BURST=25

# Caching Configuration (Redis TTL in seconds)
FACEBOOK_CACHE_TTL_CAMPAIGNS=300
FACEBOOK_CACHE_TTL_AUDIENCES=3600
FACEBOOK_CACHE_TTL_CREATIVES=1800

# Webhook Configuration (for real-time updates)
FACEBOOK_WEBHOOK_SECRET=your_webhook_secret_here
FACEBOOK_WEBHOOK_ENDPOINT=/api/brain/integrations/facebook-ads/webhook