<?xml version="1.0"?>
<!--
  ClickHouse Configuration for BizOSaaS Analytics
  Multi-tenant configuration with performance optimizations
-->
<clickhouse>
    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>10</count>
    </logger>

    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <mysql_port>9004</mysql_port>
    <postgresql_port>9005</postgresql_port>

    <!-- Multi-tenant database isolation -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
        </default>
        
        <!-- Analytics profile for heavy queries -->
        <analytics>
            <max_memory_usage>20000000000</max_memory_usage>
            <max_execution_time>300</max_execution_time>
            <max_rows_to_read>1000000000</max_rows_to_read>
        </analytics>
    </profiles>

    <!-- Users configuration -->
    <users>
        <analytics>
            <password_sha256_hex><!-- Will be set via environment --></password_sha256_hex>
            <networks incl="networks_config" />
            <profile>analytics</profile>
            <quota>default</quota>
            <databases>
                <database>analytics</database>
            </databases>
        </analytics>
    </users>

    <!-- Networks configuration -->
    <networks_config>
        <ip>::/0</ip>
    </networks_config>

    <!-- Database engines -->
    <storage_configuration>
        <disks>
            <default>
                <path>/var/lib/clickhouse/</path>
            </default>
        </disks>
        <policies>
            <default>
                <volumes>
                    <default>
                        <disk>default</disk>
                    </default>
                </volumes>
            </default>
        </policies>
    </storage_configuration>

    <!-- Compression -->
    <compression incl="compression_config" />

    <!-- Query log for performance monitoring -->
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>

    <!-- Part log for optimization -->
    <part_log>
        <database>system</database>
        <table>part_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </part_log>

    <!-- Session log for tenant tracking -->
    <session_log>
        <database>system</database>
        <table>session_log</table>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </session_log>

    <!-- Multi-tenant row-level security -->
    <dictionaries_config>/etc/clickhouse-server/dictionaries_config.xml</dictionaries_config>
    
    <!-- Memory and performance optimization -->
    <mark_cache_size>5368709120</mark_cache_size>
    <max_server_memory_usage>0</max_server_memory_usage>
    <max_concurrent_queries>100</max_concurrent_queries>
    <max_connections>4096</max_connections>
    <keep_alive_timeout>3</keep_alive_timeout>
    <max_open_files>262144</max_open_files>

    <!-- Distributed DDL -->
    <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl>

    <!-- Interserver HTTP -->
    <interserver_http_port>9009</interserver_http_port>

    <!-- Format schema -->
    <format_schema_path>/var/lib/clickhouse/format_schemas/</format_schema_path>
</clickhouse>