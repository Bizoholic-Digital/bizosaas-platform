# BizOSaaS Client Portal Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Central Hub API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8001
NEXT_PUBLIC_BRAIN_API_URL=http://localhost:8001
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Multi-tenant Configuration
NEXT_PUBLIC_APP_NAME="BizOSaaS Client Portal"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CRM=true
NEXT_PUBLIC_ENABLE_ECOMMERCE=true
NEXT_PUBLIC_ENABLE_CONTENT_MANAGEMENT=true
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_AI_CHAT=true

# Chat Configuration
NEXT_PUBLIC_CHAT_API_ENDPOINT=/api/brain/chat
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Development Settings
NEXT_PUBLIC_DEBUG=false
NEXT_TELEMETRY_DISABLED=1