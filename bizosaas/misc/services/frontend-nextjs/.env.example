# BizOSaaS Unified Dashboard Environment Configuration

# ================================
# BizOSaaS Service URLs
# ================================

# API Gateway (Multi-tenant routing and access control)
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:8080

# AI Agents Service (Campaign optimization, lead scoring, analysis)
NEXT_PUBLIC_AI_AGENTS_URL=http://localhost:8001

# Django CRM Service (Customer relationship management)
NEXT_PUBLIC_CRM_URL=http://localhost:8007

# Wagtail CMS Service (Content management)
NEXT_PUBLIC_CMS_URL=http://localhost:8006

# Event Bus Service (Domain event coordination)
NEXT_PUBLIC_EVENT_BUS_URL=http://localhost:8009

# Domain Repository Service (Business entity management)
NEXT_PUBLIC_DOMAIN_REPO_URL=http://localhost:8011

# Vault Service (Secrets management)
NEXT_PUBLIC_VAULT_URL=http://localhost:8201

# Temporal Integration Service (Workflow orchestration)
NEXT_PUBLIC_TEMPORAL_URL=http://localhost:8202

# ================================
# Dashboard Configuration
# ================================

# Dashboard branding and display
NEXT_PUBLIC_DASHBOARD_TITLE=BizOSaaS Control Center
NEXT_PUBLIC_COMPANY_NAME=BizOSaaS
NEXT_PUBLIC_DASHBOARD_SUBTITLE=Autonomous AI Agents Platform

# Feature toggles
NEXT_PUBLIC_ENABLE_REAL_TIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_INSIGHTS=true
NEXT_PUBLIC_ENABLE_MULTI_TENANT=true

# Real-time configuration
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8001/ws/realtime
NEXT_PUBLIC_SSE_ENDPOINT=/api/events/stream
NEXT_PUBLIC_REFRESH_INTERVAL=30000

# Real-time WebSocket Configuration (Enhanced)
NEXT_PUBLIC_WEBSOCKET_HEARTBEAT_INTERVAL=30000
NEXT_PUBLIC_WEBSOCKET_RECONNECT_ATTEMPTS=10
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=1000
NEXT_PUBLIC_WEBSOCKET_MAX_BACKOFF_DELAY=30000

# Real-time Performance Tuning
NEXT_PUBLIC_MAX_UPDATE_FREQUENCY=30
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_ADAPTIVE_THROTTLING=true
NEXT_PUBLIC_MAX_BATCH_SIZE=10
NEXT_PUBLIC_BATCH_INTERVAL=1000

# Real-time Notifications
NEXT_PUBLIC_ENABLE_TOAST_NOTIFICATIONS=true
NEXT_PUBLIC_MAX_NOTIFICATIONS=100
NEXT_PUBLIC_NOTIFICATION_AUTO_DISMISS=true
NEXT_PUBLIC_NOTIFICATION_DISMISS_AFTER=5000

# ================================
# Authentication & Security
# ================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Session configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400

# CORS settings
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# ================================
# Theme & Appearance
# ================================

# Default theme
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_THEME_SWITCH=true

# Brand colors (CSS custom properties)
NEXT_PUBLIC_PRIMARY_COLOR=221.2 83.2% 53.3%
NEXT_PUBLIC_SECONDARY_COLOR=210 40% 96%
NEXT_PUBLIC_ACCENT_COLOR=210 40% 96%

# ================================
# Performance & Optimization
# ================================

# Caching configuration
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_CACHE_TTL=300000

# Pagination defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Chart refresh intervals
NEXT_PUBLIC_CHART_REFRESH_RATE=60000
NEXT_PUBLIC_METRICS_REFRESH_RATE=30000

# ================================
# Development & Debugging
# ================================

# Development mode
NODE_ENV=development

# Debug logging
DEBUG=false
NEXT_PUBLIC_DEBUG_API_CALLS=false
NEXT_PUBLIC_DEBUG_REAL_TIME=false

# Mock data (for development)
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_MOCK_DELAY=1000

# ================================
# Analytics & Monitoring
# ================================

# Application monitoring
NEXT_PUBLIC_ENABLE_MONITORING=false
NEXT_PUBLIC_SENTRY_DSN=

# User analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Performance monitoring
NEXT_PUBLIC_ENABLE_WEB_VITALS=true

# ================================
# External Integrations
# ================================

# Notification services
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
EMAIL_SERVICE_URL=

# File upload and storage
UPLOAD_MAX_SIZE=10485760
STORAGE_PROVIDER=local
AWS_S3_BUCKET=
AWS_S3_REGION=

# ================================
# Multi-tenant Configuration
# ================================

# Tenant limits by tier
TIER_1_CAMPAIGN_LIMIT=5
TIER_1_LEAD_LIMIT=100
TIER_1_AGENT_LIMIT=2

TIER_2_CAMPAIGN_LIMIT=25
TIER_2_LEAD_LIMIT=1000
TIER_2_AGENT_LIMIT=5

TIER_3_CAMPAIGN_LIMIT=-1
TIER_3_LEAD_LIMIT=-1
TIER_3_AGENT_LIMIT=-1

# ================================
# Production Overrides
# ================================
