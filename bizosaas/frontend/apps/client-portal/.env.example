# =========================================
# BizOSaaS Client Portal - Environment Variables
# =========================================

# ----------------
# Application
# ----------------
NEXT_PUBLIC_APP_NAME="BizOSaaS Client Portal"
NEXT_PUBLIC_APP_URL=http://localhost:3001
NODE_ENV=development

# ----------------
# API Endpoints
# ----------------
# Brain Gateway (Central API Hub)
NEXT_PUBLIC_BRAIN_GATEWAY_URL=http://localhost:8001/api
BRAIN_GATEWAY_SECRET=your-brain-gateway-secret-key

# Wagtail Headless CMS
NEXT_PUBLIC_WAGTAIL_API_URL=http://localhost:8000/api/v2
WAGTAIL_API_KEY=your-wagtail-api-key

# Django CRM Backend
NEXT_PUBLIC_CRM_API_URL=http://localhost:8002/api
CRM_API_KEY=your-crm-api-key

# Saleor E-commerce
NEXT_PUBLIC_SALEOR_API_URL=http://localhost:8003/graphql
SALEOR_API_KEY=your-saleor-api-key

# Business Directory
NEXT_PUBLIC_DIRECTORY_API_URL=http://localhost:8004/api
DIRECTORY_API_KEY=your-directory-api-key

# ----------------
# Authentication
# ----------------
NEXT_PUBLIC_AUTH_API_URL=http://localhost:8001/api/auth
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=7d
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3001

# ----------------
# Payment Gateways
# ----------------

# Stripe (when account becomes available)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Razorpay (Primary for India)
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# PayU (Alternative for India)
NEXT_PUBLIC_PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_SALT=your_payu_salt
PAYU_MERCHANT_ID=your_payu_merchant_id

# PayPal (Global payments)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # sandbox or live

# ----------------
# Feature Flags
# ----------------
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_AI_AGENTS=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_BILLING=true

# ----------------
# Multi-Tenancy
# ----------------
NEXT_PUBLIC_ENABLE_MULTI_TENANT=true
NEXT_PUBLIC_DEFAULT_TENANT=demo-tenant

# ----------------
# Storage & Upload
# ----------------
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/*,application/pdf,.doc,.docx

# S3 / Object Storage (for file uploads)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# ----------------
# Email Service
# ----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@bizosaas.com
FROM_NAME="BizOSaaS"

# ----------------
# Third-Party Integrations
# ----------------

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Intercom (Support Chat)
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id

# ----------------
# Database (if needed for serverless functions)
# ----------------
DATABASE_URL=postgresql://user:password@localhost:5432/bizosaas_portal

# Redis (for caching & sessions)
REDIS_URL=redis://localhost:6379

# ----------------
# Development & Debug
# ----------------
DEBUG=false
LOG_LEVEL=info  # debug, info, warn, error

# ----------------
# Security
# ----------------
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ENABLED=true
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
