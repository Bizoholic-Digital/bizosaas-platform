# Business Directory Service Environment Configuration

# =============================================================================
# Application Configuration
# =============================================================================
DEBUG=false
ENVIRONMENT=development
RELOAD=true

# Service Configuration
HOST=0.0.0.0
PORT=8003

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://bizosaas:bizosaas123@localhost:5432/bizosaas
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_ECHO=false

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# =============================================================================
# Authentication & Security
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005,http://localhost:3006,http://localhost:3007,http://localhost:3008,https://bizosaas.com,https://admin.bizosaas.com,https://client.bizosaas.com

# =============================================================================
# AI & Search Configuration
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_SEARCH_LIMIT=20
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# File Storage Configuration
# =============================================================================
UPLOAD_DIR=uploads/business-directory
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# =============================================================================
# Business Directory Configuration
# =============================================================================
DEFAULT_SEARCH_RADIUS=25.0
MAX_SEARCH_RADIUS=100.0
BUSINESS_APPROVAL_REQUIRED=true
REVIEW_MODERATION_REQUIRED=true

# =============================================================================
# Pagination Configuration
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# Email Configuration (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_TLS=true

# =============================================================================
# External Services
# =============================================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GEOCODING_SERVICE=nominatim

# =============================================================================
# Google Business Profile API Configuration
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8003/api/google-auth/oauth/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/business.manage

# Google API Configuration
GOOGLE_API_VERSION=v1
GOOGLE_REQUEST_TIMEOUT=30
GOOGLE_MAX_RETRIES=3
GOOGLE_BACKOFF_FACTOR=1.0

# Sync Configuration
GOOGLE_SYNC_ENABLED=true
GOOGLE_SYNC_INTERVAL_HOURS=24
GOOGLE_BATCH_SIZE=100
GOOGLE_RATE_LIMIT_PER_MINUTE=600
GOOGLE_CONFLICT_RESOLUTION=google_priority

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=8004

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_SEARCH_PER_MINUTE=30

# =============================================================================
# Celery Configuration (Background Tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1