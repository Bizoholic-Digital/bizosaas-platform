{
  "dashboard": {
    "title": "LLM Provider Performance",
    "tags": ["llm", "ai", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Request Rate by Provider",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(llm_requests_total[5m])",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "type": "graph",
        "title": "Response Time by Provider",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(llm_response_time_seconds_bucket[5m]))",
            "legendFormat": "{{provider}} (p95)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(llm_response_time_seconds_bucket[5m]))",
            "legendFormat": "{{provider}} (p50)",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Response Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Success Rate",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(rate(llm_requests_total{status=\"success\"}[5m])) / sum(rate(llm_requests_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Total Cost (Last Hour)",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(llm_cost_dollars[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "type": "stat",
        "title": "Tokens Processed (Last Hour)",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(increase(llm_tokens_total[1h]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0
          }
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Savings vs GPT-4",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "(1 - sum(increase(llm_cost_dollars[1h])) / sum(increase(llm_gpt4_equivalent_cost[1h]))) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 20, "color": "yellow"},
                {"value": 40, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "type": "bargauge",
        "title": "Cost Breakdown by Provider",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (provider) (increase(llm_cost_dollars[1h]))",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "decimals": 2
          }
        }
      },
      {
        "id": 8,
        "type": "piechart",
        "title": "Request Distribution by Task Type",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum by (task_type) (increase(llm_requests_total[1h]))",
            "legendFormat": "{{task_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "type": "table",
        "title": "Provider Health Status",
        "gridPos": {"x": 0, "y": 20, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "llm_provider_health",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "provider": "Provider",
                "Value": "Status",
                "success_rate": "Success Rate",
                "avg_response_time": "Avg Response Time"
              }
            }
          }
        ]
      },
      {
        "id": 10,
        "type": "heatmap",
        "title": "Response Time Heatmap",
        "gridPos": {"x": 0, "y": 28, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(llm_response_time_seconds_bucket[5m])) by (le, provider)",
            "format": "heatmap",
            "legendFormat": "{{provider}}",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets"
      }
    ]
  }
}
