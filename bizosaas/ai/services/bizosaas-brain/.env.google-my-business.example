# Google My Business Integration Configuration
# Copy this file to .env.google-my-business and fill in your values

# Google OAuth Configuration
# Get these from Google Cloud Console -> Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth Redirect URI
# Must match exactly what's configured in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:3002/api/brain/integrations/google-my-business/oauth?action=callback

# Google My Business API Configuration
GOOGLE_MY_BUSINESS_API_VERSION=v1
GOOGLE_MY_BUSINESS_SCOPES=https://www.googleapis.com/auth/business.manage,https://www.googleapis.com/auth/plus.business.manage

# Cache Configuration (optional)
GMB_CACHE_TTL=3600
GMB_RATE_LIMIT_PER_HOUR=1000

# Webhook Configuration (optional)
GMB_WEBHOOK_SECRET=your_webhook_secret_here
GMB_WEBHOOK_ENDPOINT=https://yourdomain.com/webhooks/google-my-business

# Development Settings
GMB_DEBUG_MODE=true
GMB_LOG_LEVEL=INFO