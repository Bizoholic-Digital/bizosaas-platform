# Apache Superset Analytics Environment Configuration
# BizOSaaS Multi-Tenant Analytics Stack

# Superset Database Configuration
SUPERSET_DB_PASSWORD=superset_secure_password_2024
SUPERSET_REDIS_PASSWORD=redis_secure_password_2024
SUPERSET_SECRET_KEY=your-super-secret-superset-key-change-in-production-2024
SUPERSET_ADMIN_PASSWORD=admin_secure_password_2024

# ClickHouse Configuration
CLICKHOUSE_PASSWORD=clickhouse_secure_password_2024

# Brain API Integration
BRAIN_API_URL=http://brain-api:8001
BRAIN_API_TOKEN=brain_api_secure_token_2024

# Multi-tenant Configuration
DEFAULT_TENANT_ID=demo

# External API Credentials (will be stored in Vault)
GOOGLE_ANALYTICS_CREDENTIALS=
FACEBOOK_API_TOKEN=
BING_ADS_CREDENTIALS=

# ETL Configuration
ETL_SCHEDULE=0 */4 * * *

# Security Configuration
ENABLE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=
CORS_ORIGINS=http://localhost:3002,http://localhost:3000,http://localhost:8001

# Performance Configuration
SUPERSET_WEBSERVER_TIMEOUT=300
ASYNC_QUERY_TIMEOUT=300
CACHE_DEFAULT_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_TIME_ROTATE=true

# Email Configuration (optional)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
SMTP_MAIL_FROM=superset@bizosaas.com

# Development Configuration
SUPERSET_LOAD_EXAMPLES=no
ENABLE_FLASK_DEBUG=false

# Network Configuration
ANALYTICS_NETWORK_NAME=bizosaas-analytics
BRAIN_NETWORK_NAME=bizosaas-brain