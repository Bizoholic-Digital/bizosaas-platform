# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bizosaas
REDIS_URL=redis://localhost:6379

# BizOSaaS Integration
BRAIN_API_URL=http://localhost:8001
CORELDOVE_API_URL=http://localhost:3012
SALEOR_API_URL=http://localhost:8000/graphql/

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External API Keys
GOOGLE_ANALYTICS_KEY=your-google-analytics-key
FACEBOOK_PIXEL_KEY=your-facebook-pixel-key
GOOGLE_ADS_API_KEY=your-google-ads-api-key
META_ADS_API_KEY=your-meta-ads-api-key

# Payment Gateway Keys
STRIPE_API_KEY=your-stripe-api-key
RAZORPAY_KEY=your-razorpay-key
RAZORPAY_SECRET=your-razorpay-secret
PAYU_KEY=your-payu-key
PAYU_SECRET=your-payu-secret

# E-commerce Platform APIs
SHOPIFY_API_KEY=your-shopify-api-key
WOOCOMMERCE_API_KEY=your-woocommerce-api-key
MAGENTO_API_KEY=your-magento-api-key

# Market Intelligence APIs
SIMILARWEB_API_KEY=your-similarweb-api-key
SEMRUSH_API_KEY=your-semrush-api-key
AHREFS_API_KEY=your-ahrefs-api-key

# Indian Market Specific APIs
AMAZON_IN_API_KEY=your-amazon-india-api-key
FLIPKART_API_KEY=your-flipkart-api-key
MYNTRA_API_KEY=your-myntra-api-key

# SMS and Communication
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
WHATSAPP_API_KEY=your-whatsapp-business-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Machine Learning Model Storage
ML_MODEL_STORAGE_PATH=/app/models
ML_MODEL_BACKUP_URL=your-model-backup-storage-url

# Caching Configuration
REDIS_MAX_MEMORY=512mb
CACHE_DEFAULT_TIMEOUT=3600

# Logging Configuration
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Development Settings
DEBUG=False
TESTING=False
ENVIRONMENT=production

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=True
ENABLE_DYNAMIC_PRICING=True
ENABLE_INVENTORY_FORECASTING=True
ENABLE_CUSTOMER_SEGMENTATION=True
ENABLE_MARKET_INTELLIGENCE=True

# Regional Settings
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_LANGUAGE=en

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=csv,xlsx,json

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=True
ENABLE_PUSH_NOTIFICATIONS=True