# Supplier Validation Workflow [P9] Environment Configuration

# Service Configuration
SERVICE_NAME=supplier-validation
SERVICE_PORT=8027
SERVICE_VERSION=1.0.0
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/bizosaas

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Brain API Configuration
BRAIN_API_URL=http://localhost:8001

# File Storage Configuration
STORAGE_BUCKET=supplier-documents
STORAGE_TYPE=local  # local, s3, gcs
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Authentication
API_KEY=your-api-key-here
JWT_SECRET=your-jwt-secret-here

# Indian Government API Keys
GST_API_KEY=your-gst-api-key-here
PAN_API_KEY=your-pan-api-key-here
AADHAAR_API_KEY=your-aadhaar-api-key-here

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.3

# Document Processing
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,tiff
OCR_LANGUAGE=eng

# Notification Configuration
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@bizosaas.com

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# Risk Assessment Thresholds
RISK_THRESHOLD_LOW=30
RISK_THRESHOLD_MEDIUM=60
RISK_THRESHOLD_HIGH=80

# Workflow Configuration
AUTO_ASSIGN_ANALYSTS=true
REQUIRE_MANAGER_APPROVAL=true
REQUIRE_DIRECTOR_APPROVAL=true
ENABLE_COMPLIANCE_CHECK=true

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/supplier-validation.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8028

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://bizosaas.com
TRUSTED_HOSTS=localhost,127.0.0.1,bizosaas.com

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Indian Market Specific
DEFAULT_COUNTRY=India
DEFAULT_CURRENCY=INR
TIMEZONE=Asia/Kolkata

# Compliance Requirements
REQUIRE_GST=true
REQUIRE_PAN=true
REQUIRE_BUSINESS_LICENSE=true
ENABLE_BANK_VERIFICATION=true

# Document Verification
AUTO_VERIFY_DOCUMENTS=true
MANUAL_REVIEW_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8

# Integration with Product Sourcing [P8]
PRODUCT_SOURCING_API_URL=http://localhost:8026
ENABLE_PRODUCT_SOURCING_INTEGRATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds