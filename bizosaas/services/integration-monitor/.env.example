# BizOSaaS Integration Monitor Configuration

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8003
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://bizosaas_user:secure_password@localhost:5432/bizosaas_integration_monitor

# Redis Configuration
REDIS_URL=redis://localhost:6379/3

# Security
SECRET_KEY=integration-monitor-secret-key-change-in-production

# External Services
BIZOSAAS_BRAIN_URL=http://localhost:8001
