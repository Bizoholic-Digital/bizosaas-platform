# BizOSaaS Platform - Unified Stack Environment Variables
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=admin
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=bizosaas
DATABASE_URL=postgresql://admin:securepassword@postgres:5432/bizosaas

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# SECURITY KEYS (CHANGE IN PRODUCTION!)
# ===========================================
JWT_SECRET=dev-jwt-secret-key-change-in-production
SECRET_KEY=dev-secret-key-change-in-production
ADMIN_SECRET=super-admin-secret-change-in-production

# ===========================================
# AI SERVICES API KEYS
# ===========================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# PAYMENT PROCESSING
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# ===========================================
# EMAIL SERVICES
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=noreply@bizosaas.local

# ===========================================
# MARKETING INTEGRATIONS
# ===========================================
GOOGLE_ADS_API_KEY=your_google_ads_api_key
META_ADS_API_KEY=your_meta_ads_api_key
LINKEDIN_ADS_API_KEY=your_linkedin_ads_api_key

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=development
DEBUG=true
NODE_ENV=development

# ===========================================
# DOMAIN CONFIGURATION
# ===========================================
ALLOWED_HOSTS=localhost,127.0.0.1,bizosaas.local,*.bizosaas.local

# ===========================================
# ANALYTICS & MONITORING
# ===========================================
SUPERSET_SECRET_KEY=superset-secret-key-for-development

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WEBSOCKET_URL=ws://localhost:8001/ws/realtime