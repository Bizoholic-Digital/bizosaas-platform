# BizOSaaS AI Chat Service Configuration

# Service Configuration
HOST=0.0.0.0
PORT=3003
LOG_LEVEL=info
WORKERS=1
ENVIRONMENT=development

# Authentication Integration
AUTH_SERVICE_URL=http://localhost:3002
JWT_SECRET=your-super-secure-jwt-secret-key-here

# CrewAI Integration
CREW_AI_SERVICE_URL=http://localhost:8000
CREW_AI_TIMEOUT=30
CREW_AI_RETRY_ATTEMPTS=3

# AI/LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langchain-api-key-here

# Database (Optional - for persistent chat history)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/bizosaas_chat
ENABLE_PERSISTENT_HISTORY=false

# Redis (Optional - for distributed session management)
REDIS_URL=redis://localhost:6380/0
ENABLE_REDIS_SESSIONS=false

# Security Configuration
CORS_ORIGINS=["http://localhost:3001","http://localhost:5000","http://localhost:3002","http://localhost:8000"]
MAX_MESSAGE_LENGTH=4096
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_CONNECTIONS=1000

# WebSocket Configuration
WS_PING_INTERVAL=20
WS_PING_TIMEOUT=10
WS_MAX_SIZE=65536

# Chat Processing Configuration
MAX_CONVERSATION_HISTORY=20
CONVERSATION_TIMEOUT_MINUTES=30
ENABLE_CONVERSATION_SUMMARIES=true
ENABLE_ENHANCED_RESPONSES=true

# File Upload Configuration
ENABLE_FILE_UPLOADS=true
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["txt","pdf","docx","csv","json"]
UPLOAD_DIRECTORY=./uploads

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
LOG_FORMAT=json

# Performance Configuration
WORKER_TIMEOUT=120
KEEPALIVE_TIMEOUT=60
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Development/Debug
DEBUG=false
RELOAD=true
ACCESS_LOG=true
ERROR_LOG=true

# Dashboard Integration URLs
TAILADMIN_URL=http://localhost:3001
SQLADMIN_URL=http://localhost:5000

# Agent Configuration
DEFAULT_AGENT_TIMEOUT=30
AGENT_RETRY_ATTEMPTS=3
ENABLE_AGENT_FALLBACKS=true
AGENT_CONFIDENCE_THRESHOLD=0.7

# Conversation Features
ENABLE_TYPING_INDICATORS=true
ENABLE_MESSAGE_REACTIONS=false
ENABLE_VOICE_MESSAGES=false
ENABLE_SCREEN_SHARING=false

# Backup and Recovery
ENABLE_CHAT_BACKUPS=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30