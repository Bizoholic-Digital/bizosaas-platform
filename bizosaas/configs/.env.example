# BizoholicSaaS - Environment Configuration Template
# Copy this file to .env and configure your specific values

# ============ DATABASE CONFIGURATION ============
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bizosaas
POSTGRES_USER=bizosaas
POSTGRES_PASSWORD=bizosaas_password
POSTGRES_REPLICATION_PASSWORD=replication_password

# ============ REDIS CONFIGURATION ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============ JWT AUTHENTICATION ============
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ ENCRYPTION ============
ENCRYPTION_KEY=your-encryption-key-for-credentials-32-bytes-long-base64-encoded
SERVICE_SECRET=service-to-service-secret-key-change-in-production

# ============ AI API KEYS ============
OPENAI_API_KEY=your-openai-api-key
OPENROUTER_API_KEY=your-openrouter-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# ============ INTEGRATION API KEYS ============

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_PARTNER_TAG=your-amazon-associate-tag
AMAZON_HOST=webservices.amazon.in
AMAZON_REGION=eu-west-1

# Google Ads
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret

# Facebook/Meta Ads
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn Ads
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Google Analytics
GOOGLE_ANALYTICS_TRACKING_ID=your-google-analytics-tracking-id
GOOGLE_ANALYTICS_API_KEY=your-google-analytics-api-key

# ============ SMTP EMAIL CONFIGURATION ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@bizoholic.com
SMTP_FROM_NAME=BizoholicSaaS

# ============ SMS CONFIGURATION (Twilio) ============
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# ============ PUSH NOTIFICATIONS ============
FIREBASE_SERVER_KEY=your-firebase-server-key
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ============ MONITORING & OBSERVABILITY ============
GRAFANA_ADMIN_PASSWORD=admin-password-change-in-production
PROMETHEUS_RETENTION_DAYS=30

# ============ STRAPI CMS ============
STRAPI_JWT_SECRET=strapi-jwt-secret-change-in-production
STRAPI_ADMIN_JWT_SECRET=strapi-admin-jwt-secret-change-in-production
STRAPI_API_TOKEN_SALT=strapi-api-token-salt-change-in-production

# ============ MAUTIC SALES FUNNEL ============
MAUTIC_SECRET_KEY=mautic-secret-key-change-in-production
MAUTIC_API_USERNAME=your-mautic-username
MAUTIC_API_PASSWORD=your-mautic-password

# ============ DEVELOPMENT SETTINGS ============
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# ============ PRODUCTION SETTINGS ============
# Uncomment and configure for production deployment
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=warning
# DOMAIN=bizoholic.com
# SSL_ENABLED=true
# CDN_URL=https://cdn.bizoholic.com

# ============ BACKUP CONFIGURATION ============
BACKUP_S3_BUCKET=bizosaas-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
BACKUP_S3_REGION=us-east-1
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# ============ FEATURE FLAGS ============
ENABLE_SELF_MARKETING=true
ENABLE_AI_OPTIMIZATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_WHITE_LABEL=false