# Environment Variables for QuantTrade
# Copy this file to .env and fill in your values

# Database
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/bizosaas

# Redis
REDIS_URL=redis://localhost:6379

# Brain API (BizOSaaS Integration)
BRAIN_API_URL=http://localhost:8002
BRAIN_API_KEY=your_brain_api_key_here

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token_here

# Deribit Exchange
DERIBIT_API_KEY=your_deribit_api_key
DERIBIT_API_SECRET=your_deribit_api_secret
DERIBIT_TESTNET=true

# Binance Exchange
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens_min_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Trading Settings
DEFAULT_RISK_PER_TRADE=0.02
MAX_POSITION_SIZE=0.10
ENABLE_PAPER_TRADING=true

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8012
NEXT_PUBLIC_WS_URL=ws://localhost:8012/ws
