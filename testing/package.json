{
    "name": "bizosaas-testing",
    "version": "1.0.0",
    "description": "BizOSaaS Production Readiness Testing Suite",
    "private": true,
    "scripts": {
        "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
        "test:unit": "jest --config=jest.config.js",
        "test:integration": "jest --config=jest.integration.config.js",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:security": "npm run test:security:owasp && npm run test:security:deps",
        "test:security:owasp": "echo 'OWASP ZAP scan disabled - install ZAP separately'",
        "test:security:deps": "npm audit --audit-level=moderate && snyk test",
        "test:performance": "./scripts/run-performance-tests.sh",
        "test:accessibility": "./scripts/run-accessibility-tests.sh",
        "test:visual": "playwright test --grep @visual",
        "test:smoke": "playwright test --grep @smoke",
        "test:regression": "playwright test --grep @regression",
        "report:e2e": "playwright show-report",
        "report:coverage": "nyc report --reporter=html --reporter=text",
        "setup:test-data": "node scripts/seed-test-data.js",
        "setup:playwright": "playwright install --with-deps",
        "clean": "rm -rf reports/* playwright-report/* test-results/*",
        "ci:test": "npm run test:unit && npm run test:integration && npm run test:e2e -- --reporter=junit",
        "ci:security": "npm run test:security:deps",
        "validate:env": "node scripts/validate-test-env.js"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@axe-core/cli": "^4.8.2",
        "@axe-core/playwright": "^4.11.0",
        "@playwright/test": "^1.57.0",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "jest": "^29.7.0",
        "lighthouse": "^11.4.0",
        "nyc": "^15.1.0",
        "pa11y": "^7.0.0",
        "pa11y-ci": "^3.1.0",
        "playwright": "^1.57.0",
        "snyk": "^1.1275.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
